<%- include('../header') -%>

<script src="/js/media/index.js"></script>

<body class="mypage">
    <div class="wrapper movie-list">
        <%- include('../common/user_header') -%>

        <form action="/admin/reservation/list/" method="post">
            <div class="contents">
                <h1 class="page-ttl">動画一覧/申請</h1>
                <div class="inner">
                    <% if (medias.length > 0) { %>
                    <p class="text-center read">動画一覧から申請する動画を選んで「動画申請」ボタンを押してください。ボタンを押すと劇場に動画の申請を行います。</p>

                    <div class="item-list">
                        <% medias.forEach(function(media) { %>
                        <%- include('./_item', {media: media}) -%>
                        <% }); %>
                    </div>
                    <% } %>
                </div>
            </div>
        </form>

        <%- include('../common/modals') -%>

        <%- include('../common/user_footer') -%>
    </div>
</div>
</body>

<%- include('../footer') -%>